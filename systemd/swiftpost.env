# SwiftPost 环境变量配置

# 基本配置
SWIFTPOST_ENV=production
SWIFTPOST_VERSION=1.0.0

# 服务器配置
SWIFTPOST_HOST=0.0.0.0
SWIFTPOST_PORT=252
SWIFTPOST_DOMAIN=swiftpost.local

# SSL 配置
SWIFTPOST_SSL_ENABLED=true
SWIFTPOST_SSL_CERT=/opt/swiftpost/ssl/cert.pem
SWIFTPOST_SSL_KEY=/opt/swiftpost/ssl/key.pem

# 数据库配置
SWIFTPOST_DB_PATH=/opt/swiftpost/data/swiftpost.db
SWIFTPOST_PYTHON_ENABLED=true

# 邮件配置
SWIFTPOST_MAX_EMAIL_SIZE=26214400
SWIFTPOST_STORAGE_PATH=/opt/swiftpost/data/emails
SWIFTPOST_ATTACHMENT_PATH=/opt/swiftpost/data/attachments

# 安全配置
SWIFTPOST_JWT_SECRET=your-secret-key-change-this-in-production
SWIFTPOST_TOKEN_EXPIRY=72
SWIFTPOST_RATE_LIMIT=100

# WebSocket 配置
SWIFTPOST_WS_ENABLED=true
SWIFTPOST_WS_PING_INTERVAL=30
SWIFTPOST_WS_MAX_MESSAGE_SIZE=1048576

# 性能配置
SWIFTPOST_GOMAXPROCS=auto
SWIFTPOST_GC_PERCENT=100

# 日志配置
SWIFTPOST_LOG_LEVEL=info
SWIFTPOST_LOG_PATH=/opt/swiftpost/logs
SWIFTPOST_LOG_MAX_SIZE=100
SWIFTPOST_LOG_MAX_BACKUPS=10
SWIFTPOST_LOG_MAX_AGE=30

# 监控配置
SWIFTPOST_METRICS_ENABLED=true
SWIFTPOST_METRICS_PORT=9091

# 缓存配置
SWIFTPOST_CACHE_ENABLED=true
SWIFTPOST_CACHE_TTL=300
SWIFTPOST_CACHE_SIZE=1000

# 备份配置
SWIFTPOST_BACKUP_ENABLED=true
SWIFTPOST_BACKUP_PATH=/opt/swiftpost/backups
SWIFTPOST_BACKUP_RETENTION=7